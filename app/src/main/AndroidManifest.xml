<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.consultafacil">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.SignUpActivity"
            android:label="@string/title_cadastrar"
            android:parentActivityName=".auth.LoginActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".auth.LoginActivity" />
        </activity>
        <activity
            android:name=".activity.MeusAgendamentosActivity"
            android:label="@string/title_meus_agendamentos"/>
        <activity
            android:name=".activity.ConvenioActivity"
            android:label="@string/title_choice_convenio"
            android:parentActivityName=".activity.MeusAgendamentosActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MeusAgendamentosActivity" />
        </activity>
        <activity
            android:name=".activity.PerfilActivity"
            android:label="@string/title_perfil"
            android:parentActivityName=".activity.MeusAgendamentosActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MeusAgendamentosActivity" />
        </activity>
        <activity
            android:name=".activity.AlterarSenhaActivity"
            android:label="@string/title_alterar_senha"
            android:parentActivityName=".activity.PerfilActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.PerfilActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>