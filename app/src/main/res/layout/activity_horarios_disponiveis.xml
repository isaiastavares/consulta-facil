<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="?android:attr/listPreferredItemPaddingStart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?android:attr/listPreferredItemPaddingStart"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagem_prestador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/avatar1" />

            <TextView
                android:id="@+id/nome_prestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:gravity="center_vertical"
                android:text="Prestador 1"
                android:layout_marginStart="?android:attr/listPreferredItemPaddingStart"
                android:minHeight="?android:attr/listPreferredItemHeightSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="?android:attr/listPreferredItemPaddingStart"
            android:gravity="center_vertical">

            <ImageView
            android:id="@+id/imagem_localizacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_location" />

            <TextView
                android:id="@+id/nomeLocalizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                style="@style/TextDetailGrey"
                android:gravity="center_vertical"
                android:text="Localização" />
        </LinearLayout>

        <TextView
            android:id="@+id/endereco_prestador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?android:attr/listPreferredItemPaddingStart"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:layout_marginStart="30dp"
            android:gravity="center_vertical"
            android:text="Rua 1, Bairro 1, Cidade 1 - XX" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="?android:attr/listPreferredItemPaddingStart"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imagem_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_alarm" />

            <TextView
                android:id="@+id/nome_horarios_disponiveis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:gravity="center_vertical"
                style="@style/TextDetailGrey"
                android:layout_marginLeft="5dp"
                android:text="Horários Disponíveis" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="?android:attr/listPreferredItemPaddingStart"
            android:gravity="center_vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:onClick="salvarHorario"
                android:layout_marginStart="30dp"
                android:theme="@style/ButtonBlueDark"
                android:id="@+id/buttonOitoHoras" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:onClick="salvarHorario"
                android:layout_marginStart="30dp"
                android:theme="@style/ButtonBlueDark"
                android:id="@+id/buttonNoveHoras" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:onClick="salvarHorario"
                android:layout_marginStart="30dp"
                android:theme="@style/ButtonBlueDark"
                android:id="@+id/buttonDezHoras" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="?android:attr/listPreferredItemPaddingStart"
            android:gravity="center_vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:00"
                android:onClick="salvarHorario"
                android:layout_marginStart="30dp"
                android:theme="@style/ButtonBlueDark"
                android:id="@+id/buttonOnzeHoras" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:onClick="salvarHorario"
                android:layout_marginStart="30dp"
                android:theme="@style/ButtonBlueDark"
                android:id="@+id/buttonDozeHoras" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>